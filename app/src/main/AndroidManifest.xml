<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication"
        tools:targetApi="31">
        <activity
            android:name=".AddTask"
            android:exported="false" />

        <service
            android:name="androidx.appcompat.app.AppLocalesMetadataHolderService"
            android:enabled="false"
            android:exported="false">
            <meta-data
                android:name="autoStoreLocales"
                android:value="true" />
        </service>

        <activity
            android:name=".SettingActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".HistoryDetailActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".SimpleTaskDetailActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".AddSimpleTask"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".SimpleTaskActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".NormalTaskDetailActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".AddNormalTask"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".ContactUsActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".AboutUsActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".HistoryActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".NormalTaskActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PeriodicTaskDetailActivity"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".AddPeriodTask"
            android:exported="false"
            android:noHistory="true" />
        <activity
            android:name=".PeriodicTasksActivity"
            android:exported="false"
            android:noHistory="true" />
    </application>

</manifest>